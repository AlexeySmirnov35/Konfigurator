<Page x:Class="Konfigurator.Pages.InfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Konfigurator.Pages"
      mc:Ignorable="d" 
     d:Height="1000" d:Width="1100"
      Title="InfoPage">

    <Grid Background="White">
        <ListView x:Name="softwareListView" MouseDoubleClick="SoftwareListView_MouseDoubleClick">
        <ListView.View>
            <GridView>
                    <GridViewColumn Header="Программа" DisplayMemberBinding="{Binding Software.SoftwareName}" />
                    <GridViewColumn Header="Программа" DisplayMemberBinding="{Binding Positions.PositionName}" />
                <!-- Добавьте другие колонки, если необходимо -->
            </GridView>
        </ListView.View>
        </ListView>
        <Button Content="Назад" Click="Btn_GoBack" FontSize="36" HorizontalAlignment="Left" Margin="936,726,0,0" VerticalAlignment="Top" Width="146" FontFamily="Courier New" Height="52"/>
    </Grid>
</Page>
